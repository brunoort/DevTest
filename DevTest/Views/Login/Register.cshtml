
@{
    Layout = "";
}
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Dev Test</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>

<body class="custombody text-center">
        <form method="post" action="@Url.Action("SubmitForm", "Login")" class="form-signup">
            <h1 class="h3 mb-3 font-weight-normal">User registration</h1>

            <br />
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email address" required="" autofocus="">

            <br />
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="Password" required="">

            <br />
            <label for="inputPasswordConfirmation" class="sr-only">Password confirmation</label>
            <input type="password" id="inputPasswordConfirmation" name="inputPasswordConfirmation" class="form-control" placeholder="Password confirmation" required="">

            <br />
            <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button> 
        </form>
</body>
</html>

