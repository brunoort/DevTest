<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Dev Test</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="container">

    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark" style="padding:10pt">
        <a class="navbar-brand" href="#">DS - DevTest</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        @Html.Partial("menu")

    </nav>

    <main role="main">
        <h2>New Book</h2>
        <div>
            <div class="row">
                <div class="col-md-12 order-md-1">
                    <form method="post" action="@Url.Action("SubmitBook", "Book")" class="needs-validation">

                        <div class="mb-3">
                            <label for="Title">Title</label>
                            <input type="text" id="title" name="title" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label for="Description">Description</label>
                            <input type="text" id="description" name="description" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label for="ISBN">ISBN</label>
                            <input type="text" id="isbn" name="isbn" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label for="publisher">Publisher</label>
                            <input type="text" id="publisher" name="publisher" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label for="language">Language</label>
                            <input type="text" id="language" name="language" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label for="price">Price</label>
                            <input type="text" id="price" name="price" class="form-control">
                        </div>

                        <button class="btn btn-primary" type="submit">Confirm</button>
                    </form>
                </div>
            </div>
        </div>

    </main>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>